@model TrabalhoLocadoraMVC2.Models.Locacao

@{
    ViewBag.Title = "Create";
}
<body style="padding-top: 40px; padding-bottom: 40px; background-color: #f5f5f5;">
    <div class="container">
        <form action="/Locacao/Create" method="post" novalidate="novalidate" class="form-signin">
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Cadastro de Locacao</legend>

                <div class="editor-label">
                    @Html.LabelFor(model => model.ClienteId, "Cliente")
                </div>
                <div class="editor-field">
                    @Html.DropDownList("ClienteId", String.Empty)
                    @Html.ValidationMessageFor(model => model.ClienteId)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.CopiaId, "Copia")
                </div>
                <div class="editor-field">
                    @Html.DropDownList("CopiaId", String.Empty)
                    @Html.ValidationMessageFor(model => model.CopiaId)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.DataLocacao)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.DataLocacao)
                    @Html.ValidationMessageFor(model => model.DataLocacao)
                </div>
                <p>
                    <input type="submit" value="Salvar" class="btn btn-large btn-primary"/>
                </p>
            </fieldset>
        </form>
    </div>
</body>

<div>
    @Html.ActionLink("Retonar à lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

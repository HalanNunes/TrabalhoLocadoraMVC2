@model TrabalhoLocadoraMVC2.Models.TipoTitulo

@{
    ViewBag.Title = "Edit";
}

<body style="padding-top: 40px; padding-bottom: 40px; background-color: #f5f5f5;">
    <div class="container">
        <form action="/TipoTitulo/Edit/{id}" method="post" novalidate="novalidate" class="form-signin">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <fieldset>
                <legend>Alterar Tipo de Titulo</legend>

                @Html.HiddenFor(model => model.Id)

                <div class="editor-label">
                    @Html.LabelFor(model => model.Descricao)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Descricao)
                    @Html.ValidationMessageFor(model => model.Descricao)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Creditos)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Creditos)
                    @Html.ValidationMessageFor(model => model.Creditos)
                </div>

                <p>
                    <input type="submit" value="Salvar" class="btn btn-large btn-primary" />
                </p>
            </fieldset>
        </form>
    </div>
</body>

<div>
    @Html.ActionLink("Retornar à lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model TrabalhoLocadoraMVC2.Models.Cliente

@{
    ViewBag.Title = "Delete";
}
<body style="padding-top: 40px; padding-bottom: 40px; background-color: #f5f5f5;">
    <div class="container">
        <div class="div-signin">
            <fieldset>
                <legend>Tem certeza que deseja excluir este registro?</legend>

                 <div class="display-label">
                     @Html.DisplayNameFor(model => model.Nome): 
                    @Html.DisplayFor(model => model.Nome)
                </div>

                <div class="display-label">
                     @Html.DisplayNameFor(model => model.Sexo): 
                    @Html.DisplayFor(model => model.Sexo)
                </div>

                <div class="display-label">
                     @Html.DisplayNameFor(model => model.Nascimento): 
                    @Html.DisplayFor(model => model.Nascimento)
                </div>

                <div class="display-label">
                     @Html.DisplayNameFor(model => model.Endereco): 
                    @Html.DisplayFor(model => model.Endereco)
                </div>

                <div class="display-label">
                     @Html.DisplayName("Nº"): 
                    @Html.DisplayFor(model => model.NumeroEndereco)
                </div>

                <div class="display-label">
                     @Html.DisplayNameFor(model => model.Bairro): 
                    @Html.DisplayFor(model => model.Bairro)
                </div>

                <div class="display-label">
                     @Html.DisplayNameFor(model => model.Complemento): 
                    @Html.DisplayFor(model => model.Complemento)
                </div>

                <div class="display-label">
                     @Html.DisplayNameFor(model => model.Cidade): 
                    @Html.DisplayFor(model => model.Cidade)
                </div>

                <div class="display-label">
                     @Html.DisplayNameFor(model => model.Saldo): 
                    @Html.DisplayFor(model => model.Saldo)
                </div>
            </fieldset>
            <br />
            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()
                <input class="btn btn-large btn-primary" type="submit" value="Excluir" />
            }
        </div>
    </div>
</body>
@Html.ActionLink("Retornar à lista", "Index")
@model TrabalhoLocadoraMVC2.Models.Cliente

@{
    ViewBag.Title = "Add Créditos";
}

<body style="padding-top: 40px; padding-bottom: 40px; background-color: #f5f5f5;">
    <div class="container">
        <form action="/Cliente/addCreditos/{id}" method="post" novalidate="novalidate" class="form-signin">
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Adicionar Créditos</legend>

                @Html.HiddenFor(model => model.Id)

                <div class="editor-label">
                    @Html.Label("Valor do Acrescimo")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.ValorAcrescimo)
                    @Html.ValidationMessageFor(model => model.ValorAcrescimo)
                </div>

                <p>
                    <input class="btn btn-large btn-primary" type="submit" value="Salvar" />
                </p>
            </fieldset>
        </form>
    </div>
</body>

<div>
    @Html.ActionLink("Retornar à lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

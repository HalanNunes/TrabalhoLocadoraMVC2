@model TrabalhoLocadoraMVC2.Models.Copia

@{
    ViewBag.Title = "Delete";
}

<body style="padding-top: 40px; padding-bottom: 40px; background-color: #f5f5f5;">
    <div class="container">
        <div class="div-signin">
            <fieldset>
                <legend>Tem certeza que deseja excluir este registro?</legend>
                <div class="display-label">
                     @Html.DisplayNameFor(model => model.TituloId): 
                    @Html.DisplayFor(model => model.Titulo.Nome)
                </div>

                <div class="display-label">
                     @Html.DisplayNameFor(model => model.TipoCopiaId): 
                    @Html.DisplayFor(model => model.TipoCopia.Descricao)
                </div>
            </fieldset>
            <br>
            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()
                <input class="btn btn-large btn-primary" type="submit" value="Excluir" />
            }
        </div>
    </div>
</body>
@Html.ActionLink("Retornar à lista", "Index")

